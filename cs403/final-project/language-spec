assignment:
	set VARIABLE to VALUE. // period ('.') is equivalent to the semicolon (';')

call functions:
	evaluate FUNCTION.

return a value:
	return VALUE.

conditionals:
	if [WHATEVER] is [WHATEVER2], // comma (',') is equivalent to the colon (':')
	unless [WHATEVER] is [WHATEVER2], // optional, aditional feature
	while [WHATEVER] is [WHATEVER2],
	until [WHATEVER] is [WHATEVER2], // optional, aditional feature

